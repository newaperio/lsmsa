<%- model_class = @prospy.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<div class="container"><dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @prospy.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @prospy.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_1) %>:</strong></dt>
  <dd><%= @prospy.address_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_2) %>:</strong></dt>
  <dd><%= @prospy.address_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interest) %>:</strong></dt>
  <dd><%= @prospy.interest %></dd>
  <dt><strong><%= model_class.human_attribute_name(:high_school) %>:</strong></dt>
  <dd><%= @prospy.high_school %></dd>
  <dt><strong><%= model_class.human_attribute_name(:concentration_id) %>:</strong></dt>
  <dd><%= Concentration.find(@prospy.concentration_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year_id) %>:</strong></dt>
  <dd><%= @prospy.year_id %></dd>
</dl></div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              prospies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_prospy_path(@prospy), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              prospy_path(@prospy),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
